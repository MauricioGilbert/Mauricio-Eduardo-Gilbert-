#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main()
{ 
	int i,id,n,p1,p2,p3;
	float ef, np, nf;
	cout<< " Introduzca la cantidad de alumnos: "<<endl;
	cin>> n;
	i=1
	while (i<=n)
	{
		cout<< " ID: "<<endl;
	    cin>> id;
		cout<< " Introduzca la nota practica: "<<endl;
	    cin>> np;
		cout<< " Introduzca la nota de los tres parciales: "<<endl;
	    cin>> p1;
		cin>> p2;
		cin>> p3;
		cout<< " Introduzca la nota del examen final: "<<endl;
	    cin>> ef;
		nf=np*0.2+((p1+p2+p3)/3)*0.4+ef*0.4;
		cout<< " La nota final es: "<< nf<<endl;
	}
	getch();
}
