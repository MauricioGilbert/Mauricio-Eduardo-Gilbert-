#include "stdafx.h"
#include <iostream>
#include "math.h"
#include "conio.h"


int num1, num2, producto;
int residuo, mcd, mcm;

void main () 
{
cout<<"Ingrese el numero 1: ";
cin>>"%d", &num1;
cout<<"Ingrese el numero 2: ";
cin>>"%d", &num2;
producto = num1*num2

do
{
	residuo = num1 % num2;
	if (residuo !=0)
	{
		num1 = num2;
		num2 = residuo;
	}
	else
	{
		mcd = num2;
	}
} while (residuo !=0);

 mcm = producto / mcd;

 cout<<"El mcm es: %d/n"<<mcm;

 getch ();
